# Odoo instance: {{ instance.name }}
# Domain: {{ domain }}
# Generated by Odoo Manager

{% if ssl_enabled %}
# HTTP redirect to HTTPS
server {
    listen {{ http_port|default(80) }};
    server_name {{ domain }};

    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS server
server {
    listen {{ https_port|default(443) }} ssl http2;
    server_name {{ domain }};

    # SSL configuration
    ssl_certificate {{ ssl_cert_path }};
    ssl_certificate_key {{ ssl_key_path }};

    # SSL security settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # OCSP stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

{% if ssl_trusted_cert_path %}
    ssl_trusted_certificate {{ ssl_trusted_cert_path }};
{% endif %}
{% else %}
# HTTP server (no SSL)
server {
    listen {{ http_port|default(80) }};
    server_name {{ domain }};
{% endif %}

    # Logging
    access_log {{ log_dir|default('/var/log/nginx') }}/{{ instance.name }}-access.log;
    error_log {{ log_dir|default('/var/log/nginx') }}/{{ instance.name }}-error.log;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Client body size limit
    client_max_body_size {{ max_body_size|default('200M') }};

    # Proxy settings
    proxy_read_timeout 720s;
    proxy_connect_timeout 720s;
    proxy_send_timeout 720s;

    # Increase buffer sizes for large Odoo responses
    proxy_buffer_size 16k;
    proxy_buffers 16 64k;
    proxy_busy_buffers_size 128k;

    # Odoo proxy configuration
    location / {
        proxy_pass http://127.0.0.1:{{ odoo_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_redirect off;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Longpolling for background jobs
    location /longpolling {
        proxy_pass http://127.0.0.1:{{ longpolling_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_read_timeout 600s;
    }

{% if enable_websocket %}
    # Additional WebSocket support
    location /websocket {
        proxy_pass http://127.0.0.1:{{ odoo_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
{% endif %}

